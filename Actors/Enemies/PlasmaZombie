Actor PlasmaZombie : Zombieman2
{
  Health 50
  PainChance 95
  Scale 1.1
  Obituary "%o was fried by a zombie with a plasma rifle."
  SeeSound "PsxZombie/sight"
  PainSound "PsxZombie/pain"
  DeathSound "PsxZombie/death"
  ActiveSound "PsxZombie/active"
  DropItem "Cell", 256, 20
  +MissileMore
  States
  {
  Spawn:
    PRPS AB 10 A_look
	Loop
  See:
    PRPS AABBCCDD 3 A_Chase
	Loop
  Missile:
    PRPS A 0 A_JumpIfCloser(224, "BigPlasma")
	PRPS E 10 A_FaceTarget
	PRPS F 5 Bright A_CustomMissile("MiniPlasma", 32, 0, 0)
	PRPS E 10 A_FaceTarget
	PRPS F 5 Bright A_CustomMissile("MiniPlasma", 32, 0, 0)
	PRPS E 10 A_FaceTarget
	PRPS F 5 Bright A_CustomMissile("MiniPlasma", 32, 0, 0)
	Goto See
  BigPlasma:
    PRPS E 10 A_FaceTarget
	PRPS F 5 Bright A_CustomMissile("ZombiePlasma", 32, 0, 0)
	PRPS E 10 A_FaceTarget
	PRPS F 5 Bright A_CustomMissile("ZombiePlasma", 32, 0, 0)
	PRPS E 10 A_FaceTarget
	PRPS F 5 Bright A_CustomMissile("ZombiePlasma", 32, 0, Random(1, -1))
	Goto See
  Pain:
    PRPS G 3
	PRPS G 3 A_Pain
	Goto See
  Death:
    PRPS H 5
    PRPS I 5 A_Scream
    PRPS J 5 A_Fall
    PRPS K 5
    PRPS L -1
    Stop
  XDeath:
    PRPS O 5
    PRPS P 5 A_XScream
    PRPS Q 5 A_Fall
    PRPS RSTU 5
    PRPS V -1
    Stop
  Raise:
    PRPS KJIH 5
    Goto See
  }
}

Actor ZombiePlasma : PlasmaBall
{
  Decal NewPlasmaScorch
  DamageType "Monster"
  States
  {
  Spawn:
    TNT1 A 0 
	TNT1 A 1 A_SpawnItemEx("NewPlasmaTrail") //See weapons/plasmarifle
	Loop
  }
}

Actor MiniPlasma : PlasmaBall
{
  DamageType "Monster"
  Decal DoomImpScorch
  Height 6
  Radius 3
  Speed 28
  Damage (Random(10, 18))
  Scale 0.55
}