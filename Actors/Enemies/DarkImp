//Darkimp sprites: Vader,Nanami
//Darkimp Sounds: Midway Games

Actor DarkImp : Imp2
{
  Health 100
  Speed 10
  PainChance 100
  Scale 1.05
  SeeSound "Psximp/sight"
  PainSound "PsxZombie/Pain"
  DeathSound "Psximp/death"
  ActiveSound "Psximp/act"
  Obituary "%o was sent to the void by a dark imp."
  HitObituary "%o got slashed by a dark imp."
  Species "Imps"
  States
  {
  Spawn:
    DRKV AB 10 A_Look
    Loop
  See:
    DRKV AABBCCDD 3 A_Chase
    Loop
  Melee:
  Missile:
    DRKV A 0 A_Jump(96, "Spread")
    DRKV EF 8 A_FaceTarget
    DRKV G 6 A_CustomMissile("DarkImpBall", 32, 0, 0)
    Goto See
  Spread:
    DRKV IJ 8 A_FaceTarget
	DRKV K 0 A_CustomMissile("DarkImpBall2", 32, 0, 0)
	DRKV K 0 A_CustomMissile("DarkImpBall2", 32, 0, 8)
	DRKV K 6 A_CustomMissile("DarkImpBall2", 32, 0, -8)
	DRKV A 0 A_Jump(64, 1)
	Goto See
	DRKV EF 8 A_FaceTarget
    DRKV G 6 A_CustomMissile("DarkImpBall", 32, 0, 0)
    Goto See
  Pain:
    DRKV H 2
    DRKV H 2 A_Pain
    Goto See
  Death:
    DRKV L 8
    DRKV M 8 A_Scream
    DRKV N 6
    DRKV O 6 A_NoBlocking
    DRKV P -1
    Stop
  XDeath:
    DRKV Q 5
    DRKV R 5 A_XScream
    DRKV S 5
    DRKV T 5 A_NoBlocking
    DRKV UVX 5
    DRKV Y -1
    Stop
  Raise:
    DRKV PONML 8
    Goto See
  }
}

Actor DarkImpBall : NewImpBall
{
  DamageType "Monster"
  Speed 12
  Alpha 0.67
  Scale 0.7
  States
  {
  Spawn:
    DKB1 A 1 Bright A_CStaffMissileSlither
    DKB1 A 0 Bright A_SpawnItemEx("DarkBallTrail")
	DKB1 A 1 Bright A_CStaffMissileSlither
    DKB1 A 0 Bright A_SpawnItemEx("DarkBallTrail")
	DKB1 A 1 Bright A_CStaffMissileSlither
    DKB1 A 0 Bright A_SpawnItemEx("DarkBallTrail")
	DKB1 A 1 Bright A_CStaffMissileSlither
    DKB1 A 0 Bright A_SpawnItemEx("DarkBallTrail")	
	DKB1 B 1 Bright A_CStaffMissileSlither
    DKB1 B 0 Bright A_SpawnItemEx("DarkBallTrail")
	DKB1 B 1 Bright A_CStaffMissileSlither
    DKB1 B 0 Bright A_SpawnItemEx("DarkBallTrail")
	DKB1 B 1 Bright A_CStaffMissileSlither
    DKB1 B 0 Bright A_SpawnItemEx("DarkBallTrail")
	DKB1 B 1 Bright A_CStaffMissileSlither
    DKB1 B 0 Bright A_SpawnItemEx("DarkBallTrail")
	Loop
  Death:
    DKB1 CDE 5 Bright A_FadeOut(0.1)
	Stop
  }
}

Actor DarkBallTrail : NewImpBallTrail
{
  Scale 0.7
  Alpha 0.75
  States
  {
  Spawn:
    DKB1 AAABBB 1 Bright A_FadeOut(0.1)
	Stop
  }
}

