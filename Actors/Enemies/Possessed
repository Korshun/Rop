//Code: Complex MOP team, but heavily modified and rewritten to fit the new monsters.

Const Int Prop_Frozen = 0; //Well except for this part

Actor PossessedZombieman2 : PossessedMonster
{
  Player.MorphWeapon "Zombieman2Weapon"
  Health 20
  Radius 20
  Height 56
  Speed 0.35 //8 * 0,04375
  PainChance 150
  +FLOORCLIP
  SeeSound "grunt/sight"
  AttackSound "grunt/attack"
  PainSound "grunt/pain"
  DeathSound "grunt/death"
  ActiveSound "grunt/active"
  Obituary "%o was peppered by a %k's pea shooter."
  States
  {
  Spawn:
    POSS AB 10
    Loop
  See:
    POSS AABBCCDD 3
    Loop
  Melee:
    POSS F 6 Bright
    POSS E 10
    Goto Spawn
  Missile:
	POSS F 4 Bright
	POSS E 4
	POSS F 4 Bright
	POSS E 4
	POSS F 4 Bright
	POSS E 14
	Goto Spawn
  Pain:
    POSS G 3
    POSS G 3 A_Pain
    Goto Spawn
  }
}

//Zombie rifle sprite: ID software

Actor Zombieman2Weapon : PossessedWeapon
{
  Decal BulletChip
  States
  {
  Ready:
    ZMBG A 1 A_WeaponReady
	Loop
  Fire:
	ZMBG A 0 A_PlaySound("Grunt/Attack", CHAN_WEAPON)
	ZMBG B 2 Bright A_FireBullets(2, 2, -1, Random(1, 3)*5, "MonsterBulletPuff", FBF_NORANDOM) //More accurate, because it's hard to hit shit
	ZMBG B 1 Bright OffSet(0, 36)
	ZMBG C 1 Bright OffSet(0, 42)
	ZMBG C 1 Bright OffSet(0, 46)
	ZMBG A 1 OffSet(0, 44)
    ZMBG A 1 OffSet(0, 40)
	ZMBG A 1 OffSet(0, 36)
	ZMBG A 1 OffSet(0, 34)
	ZMBG A 1 OffSet(0, 32)
	ZMBG A 5
	ZMBG A 0 A_Refire
	Goto Ready
  AltFire:
    ZMBG A 0 A_GunFlash
	ZMBG A 0 A_PlaySound("Grunt/Attack", CHAN_WEAPON)
    ZMBG B 2 Bright OffSet(0, 36) A_FireBullets(3, 3, -1, Random(1, 3)*5, "MonsterBulletPuff", FBF_NORANDOM)
	ZMBG B 1 Bright OffSet(0, 42)
	ZMBG C 1 Bright OffSet(0, 46)
	ZMBG C 1 Bright OffSet(0, 44)
	ZMBG A 1 OffSet(0, 40)
	ZMBG A 1 OffSet(0, 36)
	ZMBG A 1 OffSet(0, 34)
	ZMBG A 1 OffSet(0, 32)
	ZMBG A 0 A_PlaySound("Grunt/Attack", CHAN_WEAPON)
    ZMBG B 2 Bright OffSet(0, 36) A_FireBullets(4, 4, -1, Random(1, 3)*5, "MonsterBulletPuff", FBF_NORANDOM)
	ZMBG B 1 Bright OffSet(0, 42)
	ZMBG C 1 Bright OffSet(0, 46)
	ZMBG C 1 Bright OffSet(0, 44)
	ZMBG A 1 OffSet(0, 40)
	ZMBG A 1 OffSet(0, 36)
	ZMBG A 1 OffSet(0, 34)
	ZMBG A 1 OffSet(0, 32)
	ZMBG A 0 A_PlaySound("Grunt/Attack", CHAN_WEAPON)
    ZMBG B 2 Bright OffSet(0, 36) A_FireBullets(5.5, 5.5, -1, Random(1, 3)*5, "MonsterBulletPuff", FBF_NORANDOM)
	ZMBG B 1 Bright OffSet(0, 42)
	ZMBG C 1 Bright OffSet(0, 46)
	ZMBG C 1 Bright OffSet(0, 44)
	ZMBG A 1 OffSet(0, 40)
	ZMBG A 1 OffSet(0, 36)
	ZMBG A 1 OffSet(0, 34)
	ZMBG A 1 OffSet(0, 32)
    ZMBG A 11
	ZMBG A 0 A_Refire
