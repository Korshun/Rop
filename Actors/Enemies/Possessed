	TNT1 A 8 Bright
    TNT1 A 8 A_FireCustomMissile("NewRevenantRocket2", 0, 0, -8, 16)
    TNT1 A 8 SetPlayerProperty(0, false, Prop_Frozen)
	TNT1 A 25
	Goto Ready
