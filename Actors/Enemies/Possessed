Actor Imp2Weapon : PossessedWeapon
{
  States
  {
  Altfire:
    IMPG A 0 A_GunFlash
    IMPG A 0 A_PlaySound("Imp/Melee", Chan_Weapon)
    IMPG A 0 A_Recoil(-8)
    IMPG ABCDEFGHIJKL 1
	IMPG M 1 A_CustomPunch(Random(4,8)*5, true, 0, "MonsterMeleePuff")
	IMPG NNOPQRSTU 1
	TNT1 A 5 
	TNT1 A 0 A_Refire
	Goto Ready
  Fire:
    IMPG ABCDEFGHIJKL 1
	IMPG M 1 A_FireCustomMissile("PossessedImpBall")
	IMPG NNOPQRSTU 1
	TNT1 A 5 
	TNT1 A 0 A_Refire
	Goto Ready
  }
}

