	TNT1 A 0 A_FireCustomMissile("TormentBfgBall", 0, 0, 24, -8)
	TNT1 A 10 A_FireCustomMissile("TormentBfgBall", 5, 0, -24, -8)
	TNT1 A 45
	Goto Ready
  }
}

Actor PossessedBeholder : PossessedMonster
{
  Player.MorphWeapon "BeholderWeapon"
  Health 600
  Radius 31
  Height 56
  Speed 0.39375
  PainChance 64
  SeeSound "Beholder/sight"
  PainSound "PsxDemon/pain"
  DeathSound "Beholder/death"
  ActiveSound "PsxDemon/active"
  Obituary "%o looked into %k's eye."
  BloodColor Blue
  +NoGravity
  +Float
  States
  {
  Spawn:
    ABDN ABCDCB 3
	Loop
  See:
    ABDN ABCDCB 3
	Loop
  Melee:
    ABDN EF 5
	ABDN G 5
	Goto Spawn
  Missile:
	ABDN EFG 5
	ABDN G 20
	ABDN JJJJJ 5 Bright
	Goto Spawn
  Pain:
    ABDN K 2
	ABDN K 2 A_Pain
    Goto Spawn
  }
}

Actor BeholderWeapon : PossessedWeapon
{
  States
  {
  Fire:
    TNT1 A 0 A_PlaySound("Beholder/Charge", 8)
	TNT1 A 35
	TNT1 A 0 A_PlaySound("Beholder/Fire", 8)
	TNT1 A 5 A_FireCustomMissile("BeholderBeam")
	TNT1 A 0 A_PlaySound("Beholder/Zap")
	TNT1 A 5 A_FireCustomMissile("BeholderBeam")
	TNT1 A 0 A_PlaySound("Beholder/Zap")
	TNT1 A 5 A_FireCustomMissile("BeholderBeam")
	TNT1 A 0 A_PlaySound("Beholder/Zap")
	TNT1 A 5 A_FireCustomMissile("BeholderBeam")
	TNT1 A 0 A_PlaySound("Beholder/Zap")
	TNT1 A 5 A_FireCustomMissile("BeholderBeam")
	TNT1 A 0 A_PlaySound("Beholder/Zap")
	TNT1 A 50
	TNT1 A 0 A_Refire
	Goto Ready
  AltFire:
    TNT1 A 0 A_GunFlash
    TNT1 A 0 A_PlaySound("Demon/Melee")
	TNT1 A 10
	TNT1 A 5 A_CustomPunch(Random(3, 8)*6, true)
	TNT1 A 5
	TNT1 A 0 A_Refire
	Goto Ready
  }
}