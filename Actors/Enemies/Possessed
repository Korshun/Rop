Actor Shotgunguy2Weapon : PossessedWeapon
{
  Decal BulletChip
  States
  {
  Ready:
    SHTG A 1 A_WeaponReady
    Loop
  Fire:
    SHTG A 0 A_GunFlash
	SHTG A 0 A_PlaySound("Shotguy/Attack", CHAN_WEAPON)
	SHTG A 7 A_FireBullets(4.5, 4.5, 3, Random(1, 3)*5, "MonsterBulletPuff", FBF_NORANDOM)
	SHTG BC 5
    SHTG D 4
    SHTG CB 5
    SHTG A 4
	SHTG A 0 A_Refire
	Goto Ready
  Flash:
    SHTF A 4 Bright A_Light1
	SHTF B 3 Bright A_Light1
	Goto LightDone
  AltFire:
	SHTG A 0 A_PlaySound("skeleton/swing", CHAN_WEAPON)
	SHTG A 1 A_Recoil(-13.5)
    SHTG A 1 OffSet(0, 36)
	SHTG A 1 OffSet(-1, 42)
	SHTG A 1 OffSet(-2, 48)
	SHTG A 1 OffSet(-3, 56)
	SHTG A 1 OffSet(-5, 64)
	SHTG A 1 OffSet(-7, 70)
	SHTG A 1 OffSet(-5, 64)
	SHTG A 1 OffSet(-3, 56)
	SHTG A 1 OffSet(-2, 48)
	SHTG A 1 OffSet(-1, 42)
	SHTG A 1 OffSet(0, 36)
	SHTG A 1 OffSet(0, 32)
	SHTG A 13
	Goto Ready
  }
}

