Actor Chaingunguy2Weapon : PossessedWeapon
{
  AttackSound "chainguy/attack"
  Decal BulletChip
  States
  {
  Ready:
    PKCG A 1 A_WeaponReady
	Goto Ready
  Fire:
    PKCG A 0 A_GunFlash
    PKCG A 1 A_FireBullets(5.5, 5.5, -1, Random(7, 15), "MonsterBulletPuff", FBF_NORANDOM)
	PKCG BCCDD 1
	PKCG A 0 A_GunFlash
    PKCG A 1 A_FireBullets(5.5, 5.5, -1, Random(7, 15), "MonsterBulletPuff", FBF_NORANDOM)
	PKCG BCCDD 1
	PKCG B 0 A_ReFire
	PKCG A 1 A_Weaponready
	PKCG B 2 A_Weaponready
	PKCG CD 3 A_Weaponready
    PKCG ABCD 4 A_WeaponReady
	Goto Ready
  AltFire:
    PKCG A 0 A_GunFlash
	PKCG A 1 A_FireBullets(0, 0, 1, Random(9, 17), "MonsterBulletPuff", FBF_NORANDOM)
	PKCG BCDABBCCCDDDAA 1
	PKCG AABBBBCCCCDDDD 1 A_WeaponReady
	TNT1 A 0 A_Refire
	Goto Ready
  Flash:
    TNT1 A 0
	TNT1 A 0 A_Jump(128, 4)
	PKCF A 1 Bright A_Light1
	PKCF B 1 Bright A_Light2
    TNT1 A 2 Bright A_Light2
	Goto LightDone
	TNT1 A 0
	PKCF C 1 Bright A_Light1
	PKCF D 1 Bright A_Light2
    TNT1 A 2 Bright A_Light2
	Goto LightDone
  }
}

