Actor PossessedBelphegor : PossessedMonster
{
  Player.MorphWeapon "BelpWeapon"
  Health 1400
  Radius 24
  Height 64
  Mass 1000
  Speed 0.35
  PainChance 30
  Scale 1.1
  Monster
  +FLOORCLIP
  BloodColor "DarkGreen"
  SeeSound "PsxBaron/Sight"
  PainSound "PsxPinky/Pain"
  ActiveSound "PsxPinky/ACT"
  DeathSound "PsxBaron/Death"
  Obituary "%o underestimated %k."
  HitObituary "%o was ripped to pieces by %k."
  Player.ViewHeight 59
  States
  {
  Spawn:
    BELP AB 10
    Loop
  See:
    BELP AABBCCDD 3
    Loop
  Pain:
    BELP H 2
    BELP H 2 A_Pain
    Goto See
  Melee:
  Missile:
    BELP EF 6
    BELP G 6
    BELP EF 6
    BELP G 6
    BELP EF 6 
    BELP G 6
    Goto See
  }
}

