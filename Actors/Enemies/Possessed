Actor BelpWeapon : PossessedWeapon
{
  States
  {
  Fire:
    TNT1 A 12
	TNT1 A 6 A_FireCustomMissile("PossessedBelphegorBall")
	TNT1 A 12
	TNT1 A 6 A_FireCustomMissile("PossessedBelphegorBall")
	TNT1 A 12
	TNT1 A 6 A_FireCustomMissile("PossessedBelphegorBall")
	TNT1 A 15
	Goto Ready
  AltFire:
    TNT1 A 12 A_PlaySound("Baron/Melee", Chan_Weapon)
	TNT1 A 6 A_CustomPunch(Random(8, 11)*10, True)
	TNT1 A 12 A_PlaySound("Baron/Melee", Chan_Weapon)
	TNT1 A 6 A_CustomPunch(Random(8, 11)*10, True)
	TNT1 A 12 A_PlaySound("Baron/Melee", Chan_Weapon)
	TNT1 A 6 A_CustomPunch(Random(8, 11)*10, True)
	Goto Ready
  }
}

