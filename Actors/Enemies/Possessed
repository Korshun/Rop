	TNT1 A 0 A_FireCustomMissile("TormentShot", 0, 0)
    TNT1 A 0 A_FireCustomMissile("TormentShot", -7.5, 0)
	TNT1 A 0 A_FireCustomMissile("TormentShot", -15, 0)
	TNT1 A 0 A_FireCustomMissile("TormentShot", 7.5, 0)
	TNT1 A 10 A_FireCustomMissile("TormentShot", 15, 0)
	TNT1 A 35
	Goto Ready
  AltFire:
    TNT1 A 0 A_PlaySound("PsxFatso/Attack", Chan_Weapon)
    TNT1 A 20 A_GunFlash
	TNT1 A 0 A_FireCustomMissile("TormentBfgBall", 0, 0, -24, -8)
