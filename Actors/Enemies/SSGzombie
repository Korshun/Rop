Actor SuperShotgunguy : Shotgunguy2
{
  Health 50
  Speed 9
  PainChance 100
  Scale 0.95
  SeeSound "PsxZombie/sight"
  PainSound "PsxZombie/pain"
  DeathSound "PsxZombie/death"
  ActiveSound "PsxZombie/active"
  AttackSound "ExplosiveGuy/Fire"
  DropItem "SuperShotgun", 56
  DropItem "Shell", 256, 4
  Obituary "An elite shotgunner filled %o's face with lead."
  States
  {
  Spawn:
    FPOS AB 10 A_Look
    Loop
  See:
    FPOS AABBCCDD 3 A_Chase
    Loop
  Missile:
    FPOS E 10 A_FaceTarget
    FPOS F 10 Bright A_CustomBulletAttack(12, 12, 6, Random(1,3)*5, "MonsterBulletPuff", 0, CBAF_NoRandom)
    FPOS E 35 A_ChangeFlag(NoPain, 1)
	FPOS E 0 A_ChangeFlag(NoPain, 0)
    Goto See
  Pain:
    FPOS G 3
    FPOS G 3 A_Pain
    Goto See
  Death:
    FPOS H 5
    FPOS I 5 A_Scream
    FPOS J 5 A_NoBlocking
    FPOS KLM 5
    FPOS N -1
    Stop
  XDeath:
    SPOS O 5
    SPOS P 5 A_XScream
    SPOS Q 5 A_NoBlocking
    SPOS RS 5
    SPOS T -1
    Stop
  Raise:
    FPOS N 5
    FPOS MLKJIH 5
    Goto See
  }
}