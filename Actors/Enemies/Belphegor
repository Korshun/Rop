//Sprites: Skulltag Team
//Sounds: Midway
//Code: Skulltag Team, rewritten by Neon

Actor Belphegor
{
  Health 1400
  Radius 24
  Height 64
  Mass 1000
  Speed 8
  PainChance 30
  Scale 1.1
  Monster
  +FLOORCLIP
  BloodColor "DarkGreen"
  SeeSound "PsxBaron/Sight"
  PainSound "PsxPinky/Pain"
  ActiveSound "PsxPinky/ACT"
  DeathSound "PsxBaron/Death"
  Obituary "%o underestimated a belphegor."
  HitObituary "%o was ripped to pieces by a belphegor."
  States
  {
  Spawn:
    BELP AB 10 A_Look
    Loop
  See:
    BELP AABBCCDD 3 A_Chase
    Loop
  Pain:
    BELP H 2
    BELP H 2 A_Pain
    Goto See
  Melee:
  Missile:
    BELP EF 6 A_FaceTarget
    BELP G 6 A_BasicAttack (10, "baron/melee", "BelphegorBall", 32)
    BELP EF 6 A_FaceTarget
    BELP G 6 A_BasicAttack (10, "baron/melee", "BelphegorBall", 32)
    BELP EF 6 A_FaceTarget
    BELP G 6 A_BasicAttack (10, "baron/melee", "BelphegorBall", 32)
    Goto See
  Death:
    BELP I 8
    BELP J 8 A_Scream
    BELP K 8
    BELP L 8 A_NoBlocking
    BELP MN 8
    BELP O -1 A_KillMaster
    Stop
  Raise:
    BELP ONMLKJI 8
    Goto See
  }
}

Actor BelphegorBall : NewBaronBall { Speed 20 }