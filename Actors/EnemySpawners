//Boss spawners: Faerlyn

ACTOR NobleReplacer Replaces BaronOfHell
{
+NOSECTOR
+NOGRAVITY
+BOSSDEATH
+SHOOTABLE
+ISMONSTER
+NORADIUSDMG
+NOINTERACTION
+NOBLOCKMAP
HEALTH 0x7FFFFFFF
Radius 0
Height 0
Mass 0x7FFFFFFF
States
{
Spawn:
    TNT1 A 1
    TNT1 A 0 A_Jump(22,"ArchonSpawn")	
NormalSpawn:
    TNT1 A 0 A_SpawnItemEx("BaronOfHell2",0,0,0,0,0,0,0,272)
    Goto Nothing
ArchonSpawn:
    TNT1 A 0 A_SpawnItemEx("ArchonOfHell",0,0,0,0,0,0,0,272)
    Goto Nothing
Nothing:
    TNT1 A 1
    Loop
Death:
    TNT1 A 0 A_BossDeath
    Stop
    }
}