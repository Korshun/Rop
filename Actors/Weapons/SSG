Actor NewSSG : SuperShotgun replaces SuperShotgun
{
  Decal BulletChip
  Weapon.PreferredSkin "SSGMarine"
  Weapon.SlotNumber 3
  Weapon.AmmoType "SSGClip"
  Weapon.AmmoType2 "Shell"  
  Weapon.AmmoUse 2
  Weapon.AmmoGive2 8
  Weapon.AmmoGive 0
  +WEAPON.AMMO_OPTIONAL
  +WEAPON.NOALERT
  Scale 0.85
  States
  {
  Ready:
    SHT2 A 1 A_WeaponReady
    Loop
  Deselect:
    SHT2 A 1 A_Lower
	SHT2 A 0 A_Lower
    Loop
  Select:
    SHT2 A 1 A_Raise
	SHT2 A 0 A_Raise
    Loop
  Fire:
    SHT2 A 0 A_JumpIfNoAmmo("AltFire")
    SHT2 A 3
	SHT2 A 0 A_AlertMonsters
    SHT2 A 0 A_FireBullets (11.2, 7.1, 20, 5, "PlayerBulletPuff")
    SHT2 A 7 A_GunFlash
    SHT2 B 7
    SHT2 C 7 
	SHT2 A 0 A_JumpIfInventory("Shell", 2, "AltFire")
	SHT2 C 7 A_WeaponReady
	SHT2 B 7 A_WeaponReady
	Goto Ready
  AltFire:
    TNT1 A 0 A_JumpIfInventory("SSGClip",2,2)
    TNT1 A 0 A_JumpIfInventory("Shell",2,2)
	TNT1 A 0
	Goto Ready
    SHT2 D 7 A_OpenShotgun2
    SHT2 E 7
	SHT2 A 0 A_TakeInventory("Shell", 2)
	SHT2 A 0 A_GiveInventory("SSGClip", 2)
    SHT2 F 7 A_LoadShotgun2
    SHT2 G 6
    SHT2 H 6 A_CloseShotgun2
    SHT2 A 5
    Goto Ready
  }
}

ACTOR SSGClip : Ammo
{
  Inventory.Amount 0
  Inventory.MaxAmount 2
  Ammo.BackpackAmount 0
  Ammo.BackpackMaxAmount 2
  Inventory.Icon "SHELA0"
  +IGNORESKILL
}